<?xml version="1.0"?>
<!--
	****** Destiny Emulator - Configuration File *********************************
	* Set the configurations correctly.
	* Check your MySQL Server host, user account and database.
	* Restore the database from '.sql' backup file contained in database folder.
	* And set the custom configs if you like. :)
	******************************************************************************
-->
<wydserver>
	<!-- Server Port, use DEFAULT: 8281 -->
	<port value="8281" />
	
	<!-- MySQL Settings -->
	<!-- MySQL Host, Adress IP or Hostname of machine with MySQL Server running -->
	<mysql_host value="127.0.0.1" />
	<!-- MySQL User, required to acess database. MySQL DEFAULT: root -->
	<mysql_user value="root" />
	<!-- MySQL Password, required too to acess database. MySQL DEFAULT: NULL -->
	<mysql_pass value="" />
	<!-- MySQL Database, your creted and restored database from .sql file. -->
	<mysql_db value="destiny" />
	<!-- MySQL Port, leave it as DEFAULT 3306 -->
	<mysql_port value="3306" />
	
	<!-- Auto Create Account on first login with invalid account. 1=YES\0=NO -->
	<autoacc value="0" />
	<!-- Name of your Server -->
	<servername value="Destiny Test Server" />

	<!-- XP Gain Rate -->
	<xp_rate value="100" />
	<!-- Drop Item Rate -->
	<drop_rate value="90" />
	<!-- Gold Droped Value Rate -->
	<gold_rate value="70" />
	<!-- Gold Drop Chance, 100 always drop Gold -->
	<gold_dropchance value="40" />
</wydserver>